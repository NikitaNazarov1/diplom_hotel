h1 = @room_category.name

.row
  .span6
    = link_to 'Назад', admin_room_categories_path, class: 'btn btn-inverse'
  .span6
    = link_to 'Удалить', admin_room_category_path(@room_category), data: { confirm: 'Вы действительно хотите удалить категорию?' }, class: 'btn btn-danger', method: :delete
    = link_to 'Изменить', edit_admin_room_category_path(@room_category), class: 'btn btn-warning'
    = link_to 'Добавить номера', new_admin_room_category_room_path(@room_category), class: 'btn btn-primary'
.row
  .span12
    p = simple_format @room_category.description
    p
      b> Стоимость за сутки:
      | #{@room_category.price} рублей
    p
      = link_to admin_room_category_rooms_path(@room_category) do
        strong> Число номеров:
        = @room_category.rooms.count
        = ' (нажмите, чтобы открыть список)'

